FROM php:8.2-apache

RUN apt-get update && apt-get install -y \
    freetds-dev \
    freetds-bin \
    unixodbc-dev \
    g++ \
    && pecl install pdo_dblib \
    && docker-php-ext-enable pdo_dblib \
    && a2enmod rewrite \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /var/www/html
COPY . /var/www/html/
EXPOSE 80
CMD ["apache2-foreground"]